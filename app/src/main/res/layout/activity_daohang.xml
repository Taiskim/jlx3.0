<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="600dp"
        android:layout_height="88dp"
        android:layout_weight="0"
        android:onClick="shop_click"
        app:srcCompat="@drawable/shop" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="120dp"
        >
        <ImageView
            android:id="@+id/imageView8"

            android:layout_weight="1"
            app:srcCompat="@drawable/fatcat"
            android:layout_height="200dp"
            android:layout_width="200dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/sate" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="600dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/biaoqing" />


        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/rb_map"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/homes"
            android:gravity="center" />


        <RadioButton
            android:id="@+id/rb_find"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/texts"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/rb_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/users"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/rb_car"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/settings"
            android:gravity="center" />

    </RadioGroup>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical" />

</LinearLayout>